<div class="container">
        <div class="row mb-3 align-items-center my-3">
            <div class="col-md-6">
            <h2 class="display-6">Create New Category</h2>
            </div>
          </div>
          <div class="row my-3">
              <div class="col-12">
                    <form method="post">
                        <div class="mb-3">
                            <label for="Name" class="form-label">Name</label>
                            <input class="form-control" id="Name" placeholder="Name" name="name">
                        </div>
                <div class="mb-3">
                    <label for="Description">Description</label>
                    <textarea class="form-control" placeholder="Description" id="Description" rows="5" name="description"></textarea>
                </div>
                        <div class="mb-3">
                            <label for="Status" class="form-label">Status</label>
                          <select class="form-select" name="status" id="Status" >
                              <option value="true" >Active</option>
                        <option value="false">Inactive</option>
                        </div>
                <button type="submit" class="btn btn-primary">Create</button>
                </form>
        </div>
</div>
