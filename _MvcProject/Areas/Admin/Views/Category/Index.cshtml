@model CategoriesVM
<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">All Categories</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0"></div>
        <a href="/Admin/Category/Create" class="btn btn-success">Create</a>
    </div>
    <!--Filter Section-->
    <section class="py-3 filter-bar">
        <div class="container">
            <div class="row" style="background-color: rgba(var(--bs-light-rgb),var(--bs-bg-opacity)) !important";>
                <div class="col-12">
                    <form>
                        <div class="row">
                            <!--Category Name-->
                            <div class="col-md-3">
                                <input type="text" class="form-control" placeholder="Name" name="Name"/>
                            </div>
                          <!--Submit Button-->
                          <div class="col-md-2 ">
                              <button type="submit" class="btn btn-dark w-100">Filter</button>
                          </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
<div class="row">
    <div class="col-12">

       <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
               @foreach(var item in Model.Categories)
               {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                        @if (@item.Status)
                        {
                            <td><span class="badge text-bg-success">Active</span></td>
                        }
                        else
                        {
                            <td><span class="badge text-bg-danger">Not Active</span></td>
                        }
                        <td>
                        <a href="#" type="button" class="btn btn-warning">Edit</a>
                        <a href="#" class="btn btn-danger btn-delete">Delete</a>
                    </td>
                </tr>
               }
            </tbody>
       </table>
    </div>
    </div>
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <nav aria-label="Page navigation exaple">
            <ul class="pagination justify-content-center">
                    @if(Model.CurrentPage > 1)
                    {
                        <li class="page-item"><a class="page-link" href="/Admin/Category/Index?Page=@((Model.CurrentPage) - 1)" ;>Previous</a></li>
                    }
                    @for(int i=1; i <= Model.TotalPages; i++)
                    {
                        @if(i == Model.CurrentPage)
                        {
                            <li class="page-item"><a class="page-link active" href="/Admin/Category/Index?Page=@i">@i</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="/Admin/Category/Index?Page=@i">@i</a></li>
                        }
                    }
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item"><a class="page-link" href="/Admin/Category/Index?Page=@((Model.CurrentPage) + 1)" ;>Next</a></li>
                    }
                </ul>
            </nav>
        </div>
    </div>
  </div>
